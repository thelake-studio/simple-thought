{# templates/emotion/_form.html.twig #}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="card shadow-sm border-0">
        <div class="card-body">
            {# Fila 1: Nombre #}
            <div class="mb-3">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Ej: Alegría, Ansiedad, Calma...'}}) }}
                {{ form_errors(form.name) }}
            </div>

            {# Fila 2: Valor y Color (en dos columnas) #}
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.value, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.value, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-text small">Intensidad o peso de la emoción (1 al 10).</div>
                    {{ form_errors(form.value) }}
                </div>

                <div class="col-md-6 mb-3">
                    {{ form_label(form.color, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.color, {'attr': {'class': 'form-control form-control-color w-100', 'title': 'Elige un color'}}) }}
                    {{ form_errors(form.color) }}
                </div>
            </div>

            {# Fila 3: Icono #}
            <div class="mb-3">
                {{ form_label(form.icon, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-icons text-muted"></i></span>
                    {{ form_widget(form.icon, {'attr': {'class': 'form-control', 'placeholder': 'Ej: fa-smile, fa-heart...'}}) }}
                </div>
                <div class="form-text small">
                    Usa clases de <a href="https://fontawesome.com/search?o=r&m=free" target="_blank" tabindex="-1">FontAwesome</a>. Ej: <code>fa-solid fa-star</code>
                </div>
                {{ form_errors(form.icon) }}
            </div>

            {# Botonera #}
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4 pt-3 border-top">
                <a href="{{ path('app_emotion_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button class="btn btn-primary px-4">
                    <i class="fas fa-save"></i> {{ button_label|default('Guardar') }}
                </button>
            </div>
        </div>
    </div>
{{ form_end(form) }}
