{# --- Formulario de Eliminación de Emoción --- #}
<form method="post" action="{{ path('app_emotion_delete', {'id': emotion.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres borrar esta emoción? Esta acción no se puede deshacer.');" class="d-inline-block w-100">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ emotion.id) }}">
    <button class="btn btn-outline-danger rounded-pill px-4 w-100 shadow-sm" aria-label="Eliminar esta emoción">
        <i class="fa-solid fa-trash me-2"></i>Eliminar Emoción
    </button>
</form>
