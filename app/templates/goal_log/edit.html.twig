{% extends 'base.html.twig' %}

{% block title %}Corregir Registro - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">

            {# --- Cabecera --- #}
            <header class="mb-4">
                <a href="{{ path('app_goal_show', {'id': goal_log.goal.id}) }}" class="text-decoration-none text-secondary small mb-3 d-inline-block" aria-label="Volver al objetivo">
                    <i class="fa-solid fa-arrow-left me-2"></i>Volver al objetivo
                </a>
                <h1 class="h3 fw-bold text-primary mb-1">
                    <i class="fa-solid fa-pen me-2"></i>Corregir Registro
                </h1>
                <p class="text-muted small mb-0">Modificando un avance de: <strong class="text-dark">{{ goal_log.goal.name }}</strong></p>
            </header>

            {# --- Formulario Principal --- #}
            {{ include('goal_log/_form.html.twig', {
                'button_label': 'Actualizar Registro',
                'goal': goal_log.goal
            }) }}

            {# --- Zona de Peligro (Eliminar) --- #}
            <section class="mt-5 pt-4 border-top">
                <h2 class="h6 fw-bold text-danger mb-3"><i class="fa-solid fa-triangle-exclamation me-2"></i>Zona de Peligro</h2>
                <div class="card border-0 bg-danger bg-opacity-10 rounded-4">
                    <div class="card-body p-4 d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                        <div>
                            <h3 class="h6 fw-bold text-danger mb-1">Borrar este registro</h3>
                            <p class="text-danger small mb-0 opacity-75">Si fue un error, puedes eliminar este avance y se recalcularán tus estadísticas.</p>
                        </div>
                        <div style="min-width: 200px;">
                            {{ include('goal_log/_delete_form.html.twig', {'log_id': goal_log.id}) }}
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
{% endblock %}
