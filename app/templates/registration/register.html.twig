{% extends 'base.html.twig' %}

{% block title %}Registro - Simple Thought{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h1 class="h3 mb-3 font-weight-normal">
                            <i class="fa-solid fa-seedling text-success"></i> Empieza tu viaje
                        </h1>
                        <p class="text-muted">Crea tu cuenta en Simple Thought</p>
                    </div>

                    {# Si hay errores globales del formulario, aparecerán aquí #}
                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}

                        {# Campo: Nickname #}
                        <div class="mb-3">
                            {{ form_label(registrationForm.nickname, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(registrationForm.nickname, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            <div class="text-danger small mt-1">{{ form_errors(registrationForm.nickname) }}</div>
                        </div>

                        {# Campo: Email #}
                        <div class="mb-3">
                            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            <div class="text-danger small mt-1">{{ form_errors(registrationForm.email) }}</div>
                        </div>

                        {# Campo: Contraseña #}
                        <div class="mb-4">
                            {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            <div class="text-danger small mt-1">{{ form_errors(registrationForm.plainPassword) }}</div>
                        </div>

                        {# Checkbox: Términos #}
                        <div class="mb-4 form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label text-muted'}}) }}
                            <div class="text-danger small mt-1">{{ form_errors(registrationForm.agreeTerms) }}</div>
                        </div>

                        {# Botón de Submit #}
                        <button class="btn btn-primary btn-lg w-100 py-2 mb-3 shadow-sm" type="submit">
                            <i class="fa-solid fa-user-plus me-2"></i> Registrarme
                        </button>

                        {# Botón simétrico para ir al Login #}
                        <div class="text-center mt-4 pt-3 border-top">
                            <p class="text-muted small mb-2">¿Ya formas parte de Simple Thought?</p>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary w-100">
                                <i class="fa-solid fa-arrow-right-to-bracket me-1"></i> Iniciar sesión
                            </a>
                        </div>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
