{# templates/tag/_form.html.twig #}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="card shadow-sm border-0">
        <div class="card-body">

            <div class="row align-items-center">
                {# Columna grande para el nombre #}
                <div class="col-md-9 mb-3">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Ej: Urgente, Reflexión, Salud...'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                {# Columna pequeña para el selector de color #}
                <div class="col-md-3 mb-3">
                    {{ form_label(form.color, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.color, {'attr': {'class': 'form-control form-control-color w-100', 'title': 'Elige un color para esta etiqueta'}}) }}
                    {{ form_errors(form.color) }}
                </div>
            </div>

            {# Botonera #}
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3 pt-3 border-top">
                <a href="{{ path('app_tag_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button class="btn btn-primary px-4">
                    <i class="fas fa-save"></i> {{ button_label|default('Guardar Etiqueta') }}
                </button>
            </div>
        </div>
    </div>
{{ form_end(form) }}
