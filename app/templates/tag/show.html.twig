{% extends 'base.html.twig' %}

{% block title %}Detalle: {{ tag.name }} - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">

            {# --- Cabecera y Navegación --- #}
            <header class="mb-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <a href="{{ path('app_tag_index') }}" class="text-decoration-none text-secondary small mb-3 d-inline-block" aria-label="Volver a mis etiquetas">
                        <i class="fa-solid fa-arrow-left me-2"></i>Volver al listado
                    </a>
                    <h1 class="h3 fw-bold text-primary mb-0">
                        <i class="fa-solid fa-eye me-2"></i>Detalle de Etiqueta
                    </h1>
                </div>
                <div>
                    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-primary rounded-pill px-4 shadow-sm w-100" aria-label="Editar esta etiqueta">
                        <i class="fa-solid fa-pen me-2"></i>Editar Etiqueta
                    </a>
                </div>
            </header>

            {# --- Tarjeta de Detalles --- #}
            <div class="card border-0 shadow-sm rounded-4 mb-5">

                <div class="card-body p-4 p-md-5">

                    {# Cabecera Interna de la Etiqueta #}
                    <div class="d-flex align-items-center mb-5 pb-4 border-bottom">
                        <span class="rounded-circle d-inline-block me-3 shadow-sm border" style="width: 48px; height: 48px; background-color: {{ tag.color|default('#6c757d') }};"></span>
                        <h2 class="h3 mb-0 fw-bold text-dark">{{ tag.name }}</h2>
                    </div>

                    <h3 class="h6 text-secondary text-uppercase fw-bold mb-4 small" style="letter-spacing: 1px;">Información de la Etiqueta</h3>

                    <dl class="row g-4 mb-5">
                        <dt class="col-sm-3 text-muted fw-semibold">ID Interno</dt>
                        <dd class="col-sm-9 text-dark">{{ tag.id }}</dd>

                        <dt class="col-sm-3 text-muted fw-semibold">Color Identificativo</dt>
                        <dd class="col-sm-9 d-flex align-items-center gap-2">
                            <code class="small text-muted bg-light px-2 py-1 rounded border">{{ tag.color }}</code>
                        </dd>
                    </dl>

                    {# --- Placeholder para Estadísticas (Alerta UI Kit) --- #}
                    <div class="alert alert-info border-0 shadow-sm rounded-3 d-flex align-items-center mb-0" role="alert">
                        <i class="fa-solid fa-link fs-4 me-3"></i>
                        <div>
                            <strong class="d-block mb-1">Uso en el Diario (Próximamente)</strong>
                            <span class="small">Aquí mostraremos cuántos pensamientos y entradas de tu diario utilizan esta etiqueta.</span>
                        </div>
                    </div>
                </div>
            </div>

            {# --- Zona de Peligro (Eliminar) --- #}
            <section class="mt-5 pt-4 border-top">
                <h2 class="h6 fw-bold text-danger mb-3"><i class="fa-solid fa-triangle-exclamation me-2"></i>Zona de Peligro</h2>
                <div class="card border-0 bg-danger bg-opacity-10 rounded-4">
                    <div class="card-body p-4 d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                        <div>
                            <h3 class="h6 fw-bold text-danger mb-1">Borrar esta etiqueta</h3>
                            <p class="text-danger small mb-0 opacity-75">Una vez eliminada, desaparecerá de todas las entradas donde la hayas usado.</p>
                        </div>
                        <div style="min-width: 200px;">
                            {{ include('tag/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
{% endblock %}
