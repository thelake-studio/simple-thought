{# --- Formulario de Eliminación de Etiqueta --- #}
<form method="post" action="{{ path('app_tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres borrar esta etiqueta? Se eliminará la asociación con todas tus entradas.');" class="d-inline-block w-100">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button class="btn btn-outline-danger rounded-pill px-4 w-100 shadow-sm" aria-label="Eliminar esta etiqueta">
        <i class="fa-solid fa-trash me-2"></i>Eliminar Etiqueta
    </button>
</form>
