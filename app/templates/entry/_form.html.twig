{# templates/entry/_form.html.twig #}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">

            <div class="row mb-4">
                {# Fecha #}
                <div class="col-md-4 mb-3 mb-md-0">
                    {{ form_label(form.date, null, {'label_attr': {'class': 'fw-bold text-muted small text-uppercase'}}) }}
                    {{ form_widget(form.date) }}
                    {{ form_errors(form.date) }}
                </div>

                <div class="col-md-8">
                    {{ form_label(form.emotion, null, {'label_attr': {'class': 'fw-bold text-muted small text-uppercase'}}) }}
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="fas fa-heart"></i></span>
                        {{ form_widget(form.emotion, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    {{ form_errors(form.emotion) }}
                    <div class="form-text small">Selecciona la emoción predominante de hoy.</div>
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.title, null, {'label_attr': {'class': 'fw-bold'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ponle un título a tu día (Opcional)'}}) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.content, null, {'label_attr': {'class': 'fw-bold'}}) }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'style': 'min-height: 150px;', 'placeholder': 'Escribe aquí libremente...'}}) }}
                {{ form_errors(form.content) }}
            </div>

            <hr class="text-muted my-4">

            <div class="row">
                {# Columna Izquierda: Actividades #}
                <div class="col-md-6 mb-4">
                    <h6 class="fw-bold text-primary mb-3"><i class="fas fa-running"></i> ¿Qué has hecho?</h6>
                    <div class="card bg-light border-0">
                        <div class="card-body" style="max-height: 200px; overflow-y: auto;">
                            {{ form_widget(form.activities) }}

                            {% if form.activities.vars.choices is empty %}
                                <div class="text-muted small fst-italic">No has creado actividades aún.</div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Columna Derecha: Etiquetas #}
                <div class="col-md-6 mb-4">
                    <h6 class="fw-bold text-primary mb-3"><i class="fas fa-tags"></i> Etiquetas</h6>
                    <div class="card bg-light border-0">
                        <div class="card-body" style="max-height: 200px; overflow-y: auto;">
                            {{ form_widget(form.tags) }}

                            {% if form.tags.vars.choices is empty %}
                                <div class="text-muted small fst-italic">No has creado etiquetas aún.</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4 pt-3 border-top">
                <a href="{{ path('app_entry_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button class="btn btn-primary px-4 shadow-sm">
                    <i class="fas fa-save"></i> {{ button_label|default('Guardar en mi Diario') }}
                </button>
            </div>
        </div>
    </div>
{{ form_end(form) }}
