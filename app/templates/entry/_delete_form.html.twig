{# --- Formulario de Eliminación de Entrada --- #}
<form method="post" action="{{ path('app_entry_delete', {'id': entry.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres borrar este recuerdo? Esta acción es irreversible y afectará a tus estadísticas.');" class="d-inline-block w-100">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entry.id) }}">
    <button class="btn btn-outline-danger rounded-pill px-4 w-100 shadow-sm" aria-label="Eliminar esta entrada del diario">
        <i class="fa-solid fa-trash me-2"></i>Eliminar Entrada
    </button>
</form>
