{% extends 'base.html.twig' %}

{% block title %}Diario: {{ entry.date|date('d/m/Y') }} - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">

            {# --- Cabecera y Navegación --- #}
            <header class="mb-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <a href="{{ path('app_entry_index') }}" class="text-decoration-none text-secondary small mb-3 d-inline-block" aria-label="Volver a mi diario">
                        <i class="fa-solid fa-arrow-left me-2"></i>Volver al diario
                    </a>
                    <h1 class="h3 fw-bold text-primary mb-0">
                        <i class="fa-solid fa-book-open-reader me-2"></i>Lectura del Diario
                    </h1>
                </div>
                <div>
                    <a href="{{ path('app_entry_edit', {'id': entry.id}) }}" class="btn btn-primary rounded-pill px-4 shadow-sm w-100" aria-label="Editar esta entrada">
                        <i class="fa-solid fa-pen me-2"></i>Editar Entrada
                    </a>
                </div>
            </header>

            {# --- Tarjeta de Lectura --- #}
            <article class="card border-0 shadow-sm rounded-4 mb-5">

                {# Cabecera de Color Emocional #}
                <div class="card-header border-0 rounded-top-4 p-4 p-md-5 text-white text-center" style="background-color: {{ entry.emotion ? entry.emotion.color : '#6c757d' }};">
                    <div class="mb-3 d-inline-block position-relative">
                        <div class="rounded-circle p-4 shadow-sm d-flex align-items-center justify-content-center" style="background-color: rgba(255,255,255,0.2); width: 100px; height: 100px; margin: 0 auto;">
                            <i class="fa-solid {{ entry.emotion ? entry.emotion.icon : 'fa-solid fa-face-meh' }} fa-4x text-white"></i>
                        </div>
                    </div>
                    <h2 class="h4 fw-bold text-uppercase mb-2" style="letter-spacing: 1px;">
                        {{ entry.emotion ? entry.emotion.name : 'Neutro' }}
                    </h2>
                    <p class="mb-0 text-white-50 fw-semibold">
                        <i class="fa-regular fa-calendar me-2"></i>{{ entry.date|date('l, d F Y') }}
                    </p>
                </div>

                <div class="card-body p-4 p-md-5">

                    {# Título Opcional #}
                    {% if entry.title %}
                        <h3 class="h2 fw-bold text-dark mb-4 text-center">{{ entry.title }}</h3>
                    {% endif %}

                    {# Contenido del Pensamiento #}
                    <div class="text-secondary mb-5" style="line-height: 1.8; white-space: pre-line; font-size: 1.1rem;">
                        {{ entry.content }}
                    </div>

                    <hr class="my-5 text-muted opacity-25">

                    {# --- Contexto y Metadatos --- #}
                    <div class="row g-5 mb-5">
                        {# Actividades #}
                        <div class="col-md-6">
                            <h4 class="h6 text-uppercase text-muted small fw-bold mb-3"><i class="fa-solid fa-person-running me-2"></i> Actividades Realizadas</h4>
                            <div class="d-flex flex-wrap gap-2">
                                {% for activity in entry.activities %}
                                    <span class="badge bg-light text-dark border rounded-pill px-3 py-2 shadow-sm">
                                        {% if activity.icon %}<i class="{{ activity.icon }} text-secondary me-1"></i>{% endif %} {{ activity.name }}
                                    </span>
                                {% else %}
                                    <span class="text-muted fst-italic small">Ninguna registrada</span>
                                {% endfor %}
                            </div>
                        </div>

                        {# Etiquetas #}
                        <div class="col-md-6">
                            <h4 class="h6 text-uppercase text-muted small fw-bold mb-3"><i class="fa-solid fa-tags me-2"></i> Etiquetas</h4>
                            <div class="d-flex flex-wrap gap-2">
                                {% for tag in entry.tags %}
                                    <span class="badge rounded-pill px-3 py-2 shadow-sm" style="background-color: {{ tag.color }}; color: #fff; text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
                                        <i class="fa-solid fa-tag me-1 small"></i>{{ tag.name }}
                                    </span>
                                {% else %}
                                    <span class="text-muted fst-italic small">Sin etiquetas</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    {# --- Snapshot Técnico --- #}
                    <div class="p-4 bg-light rounded-4 d-flex flex-column flex-md-row justify-content-between align-items-center gap-3 border">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-white p-3 rounded-circle shadow-sm d-flex align-items-center justify-content-center">
                                <i class="fa-solid fa-chart-line text-primary fs-5"></i>
                            </div>
                            <div>
                                <span class="d-block text-muted small fw-bold text-uppercase">Intensidad Emocional</span>
                                <span class="fs-5 fw-bold text-dark">{{ entry.moodValueSnapshot }}/10</span>
                            </div>
                        </div>
                        <div class="text-muted small text-end">
                            <i class="fa-regular fa-clock me-1"></i> Creado el {{ entry.createdAt|date('d/m/Y H:i') }}
                        </div>
                    </div>

                </div>
            </article>

            {# --- Zona de Peligro (Eliminar) --- #}
            <section class="mt-5 pt-4 border-top">
                <h2 class="h6 fw-bold text-danger mb-3"><i class="fa-solid fa-triangle-exclamation me-2"></i>Zona de Peligro</h2>
                <div class="card border-0 bg-danger bg-opacity-10 rounded-4">
                    <div class="card-body p-4 d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                        <div>
                            <h3 class="h6 fw-bold text-danger mb-1">Borrar esta entrada</h3>
                            <p class="text-danger small mb-0 opacity-75">Una vez eliminada, este recuerdo se perderá para siempre y afectará a tus estadísticas.</p>
                        </div>
                        <div style="min-width: 200px;">
                            {{ include('entry/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
{% endblock %}
