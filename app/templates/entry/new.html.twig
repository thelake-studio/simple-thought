{% extends 'base.html.twig' %}

{% block title %}Nueva Entrada - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">

            {# --- Cabecera --- #}
            <header class="mb-4">
                <a href="{{ path('app_entry_index') }}" class="text-decoration-none text-secondary small mb-3 d-inline-block" aria-label="Volver a mi diario">
                    <i class="fa-solid fa-arrow-left me-2"></i>Volver al diario
                </a>
                <h1 class="h3 fw-bold text-primary mb-1">
                    <i class="fa-solid fa-pen-fancy me-2"></i>Querido Diario...
                </h1>
                <p class="text-muted small mb-0">Registra tus pensamientos y emociones de hoy.</p>
            </header>

            {# --- Formulario --- #}
            {% include 'entry/_form.html.twig' with {'button_label': 'Guardar Entrada'} %}

        </div>
    </div>
</div>
{% endblock %}
