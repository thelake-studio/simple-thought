{% extends 'base.html.twig' %}

{% block title %}Editar Entrada - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">

            {# --- Cabecera --- #}
            <header class="mb-4">
                <a href="{{ path('app_entry_index') }}" class="text-decoration-none text-secondary small mb-3 d-inline-block" aria-label="Volver a mi diario">
                    <i class="fa-solid fa-arrow-left me-2"></i>Volver al diario
                </a>
                <div class="d-flex align-items-center gap-3">
                    <h1 class="h3 fw-bold text-primary mb-0">
                        <i class="fa-solid fa-pen me-2"></i>Editar Entrada
                    </h1>
                    <span class="badge bg-light text-secondary border rounded-pill shadow-sm py-2">
                        <i class="fa-regular fa-calendar me-1"></i> {{ entry.date ? entry.date|date('d/m/Y') : '' }}
                    </span>
                </div>
                <p class="text-muted small mt-2 mb-0">Modifica el contenido o ajusta el contexto de este recuerdo.</p>
            </header>

            {# --- Formulario Principal --- #}
            {% include 'entry/_form.html.twig' with {'button_label': 'Actualizar Cambios'} %}

            {# --- Zona de Peligro (Eliminar) --- #}
            <section class="mt-5 pt-4 border-top">
                <h2 class="h6 fw-bold text-danger mb-3"><i class="fa-solid fa-triangle-exclamation me-2"></i>Zona de Peligro</h2>
                <div class="card border-0 bg-danger bg-opacity-10 rounded-4">
                    <div class="card-body p-4 d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                        <div>
                            <h3 class="h6 fw-bold text-danger mb-1">Borrar esta entrada</h3>
                            <p class="text-danger small mb-0 opacity-75">Una vez eliminada, este recuerdo se perderá para siempre y afectará a tus estadísticas de la semana.</p>
                        </div>
                        <div style="min-width: 200px;">
                            {{ include('entry/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
{% endblock %}
