{% extends 'base.html.twig' %}

{% block title %}Anal√≠ticas - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">

    {# --- CABECERA Y FILTRO DIN√ÅMICO --- #}
    <header class="d-flex flex-column flex-xl-row justify-content-between align-items-xl-center mb-5 gap-4">
        <div>
            <h1 class="h3 fw-bold text-primary mb-1">
                <i class="fa-solid fa-chart-line me-2"></i>Tus Estad√≠sticas
            </h1>
            <p class="text-muted small mb-0">Visualiza tu evoluci√≥n emocional y descubre patrones.</p>
        </div>

        {# Formulario GET (Filtro) #}
        <form method="get" action="{{ path('app_stats_index') }}" class="d-flex flex-wrap align-items-center gap-2 bg-white p-2 rounded-pill shadow-sm border-0">
            <div class="input-group input-group-sm rounded-pill overflow-hidden" style="width: auto;">
                <span class="input-group-text bg-light border-0 pe-2"><i class="fa-regular fa-calendar text-muted"></i></span>
                <input type="date" name="start" class="form-control border-0 bg-light fw-semibold text-secondary" value="{{ currentStart }}" required aria-label="Fecha de inicio">
            </div>

            <span class="text-muted small fw-semibold mx-1">hasta</span>

            <div class="input-group input-group-sm rounded-pill overflow-hidden" style="width: auto;">
                <input type="date" name="end" class="form-control border-0 bg-light fw-semibold text-secondary" value="{{ currentEnd }}" required aria-label="Fecha de fin">
                <button type="submit" class="btn btn-primary px-3" aria-label="Filtrar resultados"><i class="fa-solid fa-filter"></i></button>
            </div>

            {# Botones de atajo r√°pido #}
            <div class="ms-1 border-start ps-2 d-none d-md-flex gap-1 align-items-center">
                <a href="{{ path('app_stats_index') }}" class="btn btn-sm btn-light text-secondary rounded-pill px-3 fw-semibold" aria-label="Ver √∫ltimos 7 d√≠as">7d</a>
                <a href="{{ path('app_stats_index', {'start': 'first day of this month', 'end': 'today'}) }}" class="btn btn-sm btn-light text-secondary rounded-pill px-3 fw-semibold" aria-label="Ver este mes">Mes</a>
            </div>
        </form>
    </header>

    {# --- ZONA DE GR√ÅFICAS --- #}
    <section class="row g-4 mb-5">

        {# LA GR√ÅFICA MAESTRA (Ocupa todo el ancho) #}
        <div class="col-12">
            <article class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2">
                    <h2 class="h5 fw-bold text-dark mb-0">
                        <i class="fa-solid fa-wave-square text-primary me-2"></i> Evoluci√≥n de tu √Ånimo
                    </h2>
                    <span class="badge bg-light text-secondary border rounded-pill px-3 py-2 shadow-sm">
                        <i class="fa-regular fa-calendar-check me-1"></i> {{ currentStart|date('d/m/Y') }} - {{ currentEnd|date('d/m/Y') }}
                    </span>
                </div>
                <div class="card-body p-4" style="position: relative; height: 350px;">
                    <canvas data-controller="chart" data-chart-type-value="line" data-chart-datos-value="{{ moodEvolutionData|json_encode }}"></canvas>
                </div>
            </article>
        </div>

        {# TOP ACTIVIDADES (Donut) #}
        <div class="col-md-6 col-xl-4">
            <article class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                    <h2 class="h5 fw-bold text-dark mb-0">
                        <i class="fa-solid fa-trophy text-warning me-2"></i> Top 5 Actividades
                    </h2>
                </div>
                <div class="card-body p-4" style="position: relative; height: 300px;">
                    <canvas data-controller="chart" data-chart-type-value="doughnut" data-chart-datos-value="{{ topActivitiesData|json_encode }}"></canvas>
                </div>
            </article>
        </div>

        {# MATRIZ ACTIVIDAD-EMOCI√ìN (Barras) #}
        <div class="col-md-6 col-xl-4">
            <article class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                    <h2 class="h5 fw-bold text-dark mb-0">
                        <i class="fa-solid fa-bolt text-info me-2"></i> Impacto en el √Ånimo
                    </h2>
                </div>
                <div class="card-body p-4" style="position: relative; height: 300px;">
                    <canvas data-controller="chart" data-chart-type-value="bar" data-chart-datos-value="{{ activityMoodMatrixData|json_encode }}"></canvas>
                </div>
            </article>
        </div>

        {# CRUCE: OBJETIVOS VS √ÅNIMO (Barras comparativas) #}
        <div class="col-md-6 col-xl-4">
            <article class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                    <h2 class="h5 fw-bold text-dark mb-0">
                        <i class="fa-solid fa-bullseye text-success me-2"></i> Objetivos vs. √Ånimo
                    </h2>
                </div>
                <div class="card-body p-4" style="position: relative; height: 300px;">
                    <canvas data-controller="chart" data-chart-type-value="bar" data-chart-datos-value="{{ goalMoodCorrelationData|json_encode }}"></canvas>
                </div>
            </article>
        </div>

        {# RADAR DE CONTEXTO (Nube de Etiquetas) #}
        <div class="col-md-6 col-xl-12">
            <article class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                    <h2 class="h5 fw-bold text-dark mb-0">
                        <i class="fa-solid fa-tags text-primary me-2"></i> Radar de Contexto
                    </h2>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="row g-5">
                        {# üåü Potenciadores #}
                        <div class="col-xl-6">
                            <h3 class="h6 text-uppercase fw-bold text-success mb-4" style="letter-spacing: 1px;">
                                <i class="fa-solid fa-arrow-trend-up me-2"></i> Potenciadores (D√≠as Felices)
                            </h3>
                            {% if tagContextData.positive is empty %}
                                <div class="bg-light rounded-4 p-4 text-center border">
                                    <p class="text-muted small fw-semibold mb-0">No hay etiquetas en d√≠as con nota ‚â• 8.</p>
                                </div>
                            {% else %}
                                <div class="d-flex flex-wrap gap-2">
                                    {% for name, data in tagContextData.positive %}
                                        <span class="badge rounded-pill shadow-sm d-flex align-items-center py-2 px-3 border" style="background-color: {{ data.color|default('#fff') }}; color: #fff; text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
                                            <i class="fa-solid fa-tag me-2 small"></i> <span class="fw-semibold" style="font-size: 0.95rem;">{{ name }}</span>
                                            <span class="badge bg-white text-dark ms-2 rounded-circle shadow-sm" style="font-size: 0.75rem;">{{ data.count }}</span>
                                        </span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        {# ‚öì Frenos #}
                        <div class="col-xl-6">
                            <h3 class="h6 text-uppercase fw-bold text-danger mb-4" style="letter-spacing: 1px;">
                                <i class="fa-solid fa-arrow-trend-down me-2"></i> Frenos (D√≠as Dif√≠ciles)
                            </h3>
                            {% if tagContextData.negative is empty %}
                                <div class="bg-light rounded-4 p-4 text-center border">
                                    <p class="text-muted small fw-semibold mb-0">No hay etiquetas en d√≠as con nota ‚â§ 4.</p>
                                </div>
                            {% else %}
                                <div class="d-flex flex-wrap gap-2">
                                    {% for name, data in tagContextData.negative %}
                                        <span class="badge rounded-pill shadow-sm d-flex align-items-center py-2 px-3 border" style="background-color: {{ data.color|default('#fff') }}; color: #fff; text-shadow: 0 1px 2px rgba(0,0,0,0.3);">
                                            <i class="fa-solid fa-tag me-2 small"></i> <span class="fw-semibold" style="font-size: 0.95rem;">{{ name }}</span>
                                            <span class="badge bg-white text-dark ms-2 rounded-circle shadow-sm" style="font-size: 0.75rem;">{{ data.count }}</span>
                                        </span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>

    {# --- EL A√ëO EN P√çXELES (Mapa de Calor) --- #}
    <section>
        <article class="card border-0 shadow-sm rounded-4">
            <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                <h2 class="h5 fw-bold text-dark mb-0">
                    <i class="fa-solid fa-calendar-days text-primary me-2"></i> Tu A√±o en P√≠xeles ({{ yearInPixelsData.year }})
                </h2>
            </div>

            <div class="card-body p-4 p-xl-5">
                <div class="table-responsive rounded-4 border shadow-sm mb-4">
                    <table class="table table-sm text-center mb-0" style="table-layout: fixed; min-width: 600px;">
                        <thead class="bg-light border-bottom">
                            <tr>
                                <th style="width: 45px;" class="text-muted small text-uppercase fw-bold border-end">D√≠a</th>
                                {% set meses = ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'] %}
                                {% for mes in meses %}
                                    <th class="text-muted small text-uppercase fw-bold">{{ mes }}</th>
                                {% endfor %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for d in 1..31 %}
                                <tr>
                                    <td class="bg-light text-secondary small fw-bold align-middle border-end border-bottom-0">{{ d }}</td>
                                    {% for m in 1..12 %}
                                        {% set note = yearInPixelsData.calendar[m][d] ?? null %}
                                        {% set bgColor = '#f8f9fa' %}

                                        {% if note is not null %}
                                            {% if note >= 9 %} {% set bgColor = '#198754' %}
                                            {% elseif note >= 7 %} {% set bgColor = '#20c997' %}
                                            {% elseif note >= 5 %} {% set bgColor = '#ffc107' %}
                                            {% elseif note >= 3 %} {% set bgColor = '#fd7e14' %}
                                            {% else %} {% set bgColor = '#dc3545' %}
                                            {% endif %}
                                        {% endif %}

                                        <td style="background-color: {{ bgColor }}; height: 30px; cursor: help; transition: transform 0.1s, filter 0.2s;" class="border border-white shadow-sm"
                                            title="D√≠a {{ d }}/{{ m }} - {% if note is not null %}Nota media: {{ note }}{% else %}Sin registros{% endif %}"
                                            onmouseover="this.style.filter='brightness(0.85)'; this.style.transform='scale(1.1)';"
                                            onmouseout="this.style.filter='brightness(1)'; this.style.transform='scale(1)';">
                                        </td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# Leyenda de colores #}
                <div class="d-flex justify-content-center flex-wrap gap-4 text-secondary small fw-semibold">
                    <span class="d-flex align-items-center"><span class="rounded-circle shadow-sm border me-2" style="background-color: #198754; width:16px; height:16px;"></span> Excelente (9-10)</span>
                    <span class="d-flex align-items-center"><span class="rounded-circle shadow-sm border me-2" style="background-color: #20c997; width:16px; height:16px;"></span> Bueno (7-8)</span>
                    <span class="d-flex align-items-center"><span class="rounded-circle shadow-sm border me-2" style="background-color: #ffc107; width:16px; height:16px;"></span> Regular (5-6)</span>
                    <span class="d-flex align-items-center"><span class="rounded-circle shadow-sm border me-2" style="background-color: #fd7e14; width:16px; height:16px;"></span> Dif√≠cil (3-4)</span>
                    <span class="d-flex align-items-center"><span class="rounded-circle shadow-sm border me-2" style="background-color: #dc3545; width:16px; height:16px;"></span> Malo (1-2)</span>
                    <span class="d-flex align-items-center"><span class="rounded-circle shadow-sm border me-2" style="background-color: #f8f9fa; width:16px; height:16px;"></span> Sin datos</span>
                </div>
            </div>
        </article>
    </section>

</div>
{% endblock %}
