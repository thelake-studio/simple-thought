{% extends 'base.html.twig' %}

{% block title %}Analíticas - Simple Thought{% endblock %}

{% block body %}
<div class="container mt-4">

    {# 1. ENCABEZADO Y FILTRO DINÁMICO #}
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h2 class="mb-0">
            <i class="fa-solid fa-chart-line text-primary me-2"></i> Tus Estadísticas
        </h2>

        {# Formulario GET que envía las fechas a la URL #}
        <form method="get" action="{{ path('app_stats_index') }}" class="d-flex align-items-center gap-2 bg-white p-2 rounded shadow-sm border">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-light border-end-0"><i class="fa-regular fa-calendar"></i></span>
                <input type="date" name="start" class="form-control border-start-0" value="{{ currentStart }}" required title="Fecha de inicio">
            </div>
            <span class="text-muted small">hasta</span>
            <div class="input-group input-group-sm">
                <input type="date" name="end" class="form-control border-end-0" value="{{ currentEnd }}" required title="Fecha de fin">
                <button type="submit" class="btn btn-primary btn-sm"><i class="fa-solid fa-filter"></i> Filtrar</button>
            </div>

            {# Botones de atajo rápido #}
            <div class="ms-2 border-start ps-2 d-none d-md-flex gap-1">
                <a href="{{ path('app_stats_index') }}" class="btn btn-sm btn-outline-secondary" title="Últimos 7 días">7d</a>
                <a href="{{ path('app_stats_index', {'start': 'first day of this month', 'end': 'today'}) }}" class="btn btn-sm btn-outline-secondary" title="Este mes">Mes</a>
            </div>
        </form>
    </div>

    {# 2. ZONA DE GRÁFICAS #}
    <div class="row">

        {# LA GRÁFICA MAESTRA (Ocupa todo el ancho en pantallas grandes) #}
        <div class="col-12 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-wave-square text-primary me-2"></i> Evolución de tu Ánimo
                    </h5>
                    <span class="badge bg-light text-dark border">
                        {{ currentStart|date('d/m/Y') }} - {{ currentEnd|date('d/m/Y') }}
                    </span>
                </div>
                <div class="card-body" style="position: relative; height: 350px;">
                    <canvas
                        data-controller="chart"
                        data-chart-type-value="line"
                        data-chart-datos-value="{{ moodEvolutionData|json_encode }}"
                    ></canvas>
                </div>
            </div>
        </div>

        {# TOP ACTIVIDADES (Donut) #}
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-trophy text-warning me-2"></i> Top 5 Actividades
                    </h5>
                </div>
                <div class="card-body" style="position: relative; height: 300px;">
                    <canvas
                        data-controller="chart"
                        data-chart-type-value="doughnut"
                        data-chart-datos-value="{{ topActivitiesData|json_encode }}"
                    ></canvas>
                </div>
            </div>
        </div>

        {# MATRIZ ACTIVIDAD-EMOCIÓN (Barras) #}
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-bolt text-info me-2"></i> Impacto en el Ánimo
                    </h5>
                </div>
                <div class="card-body" style="position: relative; height: 300px;">
                    <canvas
                        data-controller="chart"
                        data-chart-type-value="bar"
                        data-chart-datos-value="{{ activityMoodMatrixData|json_encode }}"
                    ></canvas>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}
