{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">

            {# --- Tarjeta de Login --- #}
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 p-md-5">

                    {# --- Cabecera --- #}
                    <header class="text-center mb-5">
                        <h1 class="h3 fw-bold text-primary mb-2">
                            <i class="fa-solid fa-seedling text-success me-2"></i>¡Hola de nuevo!
                        </h1>
                        <p class="text-muted small mb-0">Inicia sesión en Simple Thought</p>
                    </header>

                    {# --- Formulario de Login --- #}
                    <form method="post" data-turbo="false">

                        {# --- Errores de Autenticación --- #}
                        {% if error %}
                            <div class="alert alert-danger border-0 shadow-sm rounded-3 d-flex align-items-center mb-4" role="alert">
                                <i class="fa-solid fa-circle-xmark fs-4 me-3"></i>
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            </div>
                        {% endif %}

                        {# --- Sesión Activa (Si ya está logueado) --- #}
                        {% if app.user %}
                            <div class="alert alert-info border-0 shadow-sm rounded-3 mb-4 text-center" role="alert">
                                <span class="small">Ya has iniciado sesión como <strong>{{ app.user.userIdentifier }}</strong>.</span>
                                <br>
                                <a href="{{ logout_path() }}" class="alert-link small">Cerrar sesión</a>
                            </div>
                        {% endif %}

                        {# --- Campo: Email --- #}
                        <div class="mb-4">
                            <label for="inputEmail" class="form-label fw-semibold text-secondary small">Correo Electrónico</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-lg bg-light border-0" autocomplete="email" placeholder="tucorreo@ejemplo.com" required autofocus>
                        </div>

                        {# --- Campo: Contraseña --- #}
                        <div class="mb-4">
                            <label for="inputPassword" class="form-label fw-semibold text-secondary small">Contraseña</label>
                            <input type="password" name="password" id="inputPassword" class="form-control form-control-lg bg-light border-0" autocomplete="current-password" placeholder="Tu contraseña" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {# --- Checkbox: Recordarme --- #}
                        <div class="mb-4 form-check">
                            <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input shadow-sm">
                            <label class="form-check-label text-muted small" for="rememberMe">Recuérdame</label>
                        </div>

                        {# --- Botón Principal --- #}
                        <button class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm mb-4" type="submit">
                            <i class="fa-solid fa-arrow-right-to-bracket me-2"></i>Entrar
                        </button>

                        {# --- Navegación Secundaria (Registro) --- #}
                        <div class="text-center pt-4 border-top">
                            <p class="text-muted small mb-3">¿Todavía no tienes cuenta en Simple Thought?</p>
                            <a href="{{ path('app_register') }}" class="btn btn-outline-secondary w-100 rounded-pill" aria-label="Ir a la página de crear cuenta nueva">
                                <i class="fa-solid fa-user-plus me-2"></i>Crear cuenta nueva
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
