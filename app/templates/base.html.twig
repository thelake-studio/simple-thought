<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Simple Thought{% endblock %}</title>

        {% block stylesheets %}
            {{ importmap('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ importmap('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="d-flex">
            <nav class="sidebar bg-dark text-white vh-100 position-fixed" style="width: 260px;">
                <div class="p-4">
                    <h3 class="h4 mb-4">ðŸ§  Simple Thought</h3>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a href="{{ path('app_home') }}" class="nav-link text-white active">
                                <i class="fa-solid fa-house me-2"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-white-50">
                                <i class="fa-solid fa-calendar-day me-2"></i> Mi Diario
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="position-absolute bottom-0 w-100 p-4 border-top border-secondary">
                    {% if app.user %}
                        <div class="mb-2 small">{{ app.user.nickname }}</div>
                        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger w-100">Salir</a>
                    {% endif %}
                </div>
            </nav>

            <main class="ms-auto p-5" style="width: calc(100% - 260px);">
                <div class="container-fluid">
                    {% block body %}{% endblock %}
                </div>
            </main>
        </div>
    </body>
</html>
