{{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.nickname, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.nickname, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger small mt-1">{{ form_errors(form.nickname) }}</div>
    </div>

    <div class="mb-4">
        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger small mt-1">{{ form_errors(form.email) }}</div>
    </div>

    <div class="d-flex justify-content-between pt-3 border-top">
        <a href="{{ path('app_profile_index') }}" class="btn btn-light border shadow-sm">Cancelar</a>
        <button class="btn btn-primary shadow-sm" type="submit">
            <i class="fa-solid fa-save me-2"></i> {{ button_label|default('Guardar Cambios') }}
        </button>
    </div>
{{ form_end(form) }}
