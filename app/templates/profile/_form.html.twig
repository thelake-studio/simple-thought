{# --- Formulario de Perfil --- #}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4 p-md-5">

            <div class="mb-4">
                {{ form_label(form.nickname, '¿Cómo quieres que te llamemos?', {'label_attr': {'class': 'form-label fw-semibold text-secondary small'}}) }}
                {{ form_widget(form.nickname, {'attr': {'class': 'form-control form-control-lg bg-light border-0'}}) }}
                <div class="text-danger small mt-1">{{ form_errors(form.nickname) }}</div>
            </div>

            <div class="mb-4">
                {{ form_label(form.email, 'Correo Electrónico', {'label_attr': {'class': 'form-label fw-semibold text-secondary small'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg bg-light border-0'}}) }}
                <div class="text-danger small mt-1">{{ form_errors(form.email) }}</div>
            </div>

            {# --- Botonera de Acción --- #}
            <div class="d-flex flex-column flex-md-row justify-content-md-end gap-3 mt-5 pt-4 border-top">
                <a href="{{ path('app_profile_index') }}" class="btn btn-outline-secondary rounded-pill px-4" aria-label="Cancelar y volver a mi perfil">
                    Cancelar
                </a>
                <button class="btn btn-primary rounded-pill px-4 shadow-sm" type="submit">
                    <i class="fa-solid fa-save me-2"></i> {{ button_label|default('Guardar Cambios') }}
                </button>
            </div>

        </div>
    </div>
{{ form_end(form) }}
