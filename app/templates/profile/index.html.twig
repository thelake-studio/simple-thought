{% extends 'base.html.twig' %}

{% block title %}Mi Perfil - Simple Thought{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fa-solid fa-user text-primary me-2"></i> Mi Cuenta</h4>
                    <a href="{{ path('app_profile_edit') }}" class="btn btn-sm btn-outline-primary">
                        <i class="fa-solid fa-pen"></i> Editar
                    </a>
                </div>
                <div class="card-body p-4">
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item px-0">
                            <span class="text-muted d-block small">¿Cómo te llamamos?</span>
                            <span class="fs-5 fw-bold">{{ user.nickname }}</span>
                        </li>
                        <li class="list-group-item px-0">
                            <span class="text-muted d-block small">Correo Electrónico</span>
                            <span class="fs-5">{{ user.email }}</span>
                        </li>
                    </ul>

                    <hr class="mb-4">

                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded border border-danger border-opacity-25">
                        <div>
                            <h6 class="text-danger mb-1"><i class="fa-solid fa-triangle-exclamation"></i> Zona de Peligro</h6>
                            <p class="text-muted small mb-0">Esta acción es irreversible y borrará todo tu diario.</p>
                        </div>

                        {{ include('profile/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
