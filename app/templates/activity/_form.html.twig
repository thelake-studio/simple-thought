{# templates/activity/_form.html.twig #}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="card shadow-sm border-0">
        <div class="card-body">
            {# Fila 1: Datos Principales #}
            <div class="row">
                <div class="col-md-8 mb-3">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Ej: Gimnasio, Leer, Curso de Symfony...'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_label(form.category, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.category, {'attr': {'class': 'form-control', 'placeholder': 'Ej: Salud, Ocio'}}) }}
                    {{ form_errors(form.category) }}
                </div>
            </div>

            {# Fila 2: Descripción #}
            <div class="mb-3">
                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                <div class="form-text">Añade detalles opcionales para recordar en qué consiste.</div>
                {{ form_errors(form.description) }}
            </div>

            <hr class="my-4 text-muted">

            {# Fila 3: Aspecto Visual #}
            <h6 class="text-muted mb-3 text-uppercase small ls-1">Personalización Visual</h6>
            <div class="row align-items-center">
                <div class="col-md-2 mb-3">
                    {{ form_label(form.color, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.color, {'attr': {'class': 'form-control form-control-color w-100', 'title': 'Elige un color'}}) }}
                    {{ form_errors(form.color) }}
                </div>

                <div class="col-md-10 mb-3">
                    {{ form_label(form.icon, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-icons text-muted"></i></span>
                        {{ form_widget(form.icon, {'attr': {'class': 'form-control', 'placeholder': 'Ej: fa-solid fa-person-running'}}) }}
                    </div>
                    <div class="form-text small">
                        Copia clases de <a href="https://fontawesome.com/search?o=r&m=free" target="_blank">FontAwesome</a>.
                    </div>
                    {{ form_errors(form.icon) }}
                </div>
            </div>

            {# Botonera #}
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4 pt-3 border-top">
                <a href="{{ path('app_activity_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
                <button class="btn btn-success px-4 text-white">
                    <i class="fas fa-save"></i> {{ button_label|default('Guardar Actividad') }}
                </button>
            </div>
        </div>
    </div>
{{ form_end(form) }}
