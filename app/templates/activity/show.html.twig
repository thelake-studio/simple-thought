{% extends 'base.html.twig' %}

{% block title %}Detalle: {{ activity.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 overflow-hidden">
                <div class="card-header text-white p-4" style="background-color: {{ activity.color|default('#198754') }};">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h2 mb-0 fw-bold">
                            {% if activity.icon %} <i class="{{ activity.icon }} me-2"></i> {% endif %}
                            {{ activity.name }}
                        </h1>
                        {% if activity.category %}
                            <span class="badge bg-white text-dark shadow-sm">{{ activity.category }}</span>
                        {% endif %}
                    </div>
                </div>

                <div class="card-body p-4">
                    <h5 class="text-muted mb-3">Información de la Actividad</h5>

                    <dl class="row">
                        <dt class="col-sm-3 text-muted">Descripción</dt>
                        <dd class="col-sm-9">
                            {{ activity.description|default('Sin descripción detallada.')|nl2br }}
                        </dd>

                        <dt class="col-sm-3 text-muted">Configuración</dt>
                        <dd class="col-sm-9">
                            <span class="badge border text-dark" style="background-color: {{ activity.color }};">{{ activity.color }}</span>
                            {% if activity.icon %} <code class="ms-2">{{ activity.icon }}</code> {% endif %}
                        </dd>
                    </dl>

                    {# Placeholder para futuras estadísticas #}
                    <div class="alert alert-light border mt-4">
                        <i class="fas fa-chart-bar text-success"></i>
                        <small class="text-muted">Próximamente: Histórico de veces que has realizado esta actividad.</small>
                    </div>
                </div>

                <div class="card-footer bg-light p-3 d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_activity_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                    <div>
                        <a href="{{ path('app_activity_edit', {'id': activity.id}) }}" class="btn btn-success me-2 text-white">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        {{ include('activity/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
