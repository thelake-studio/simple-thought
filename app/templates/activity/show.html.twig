{% extends 'base.html.twig' %}

{% block title %}Detalle: {{ activity.name }} - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">

            {# --- Cabecera y Navegación --- #}
            <header class="mb-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <a href="{{ path('app_activity_index') }}" class="text-decoration-none text-secondary small mb-3 d-inline-block" aria-label="Volver a mis actividades">
                        <i class="fa-solid fa-arrow-left me-2"></i>Volver al listado
                    </a>
                    <h1 class="h3 fw-bold text-primary mb-0">
                        <i class="fa-solid fa-eye me-2"></i>Detalle de Actividad
                    </h1>
                </div>
                <div>
                    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}" class="btn btn-primary rounded-pill px-4 shadow-sm w-100" aria-label="Editar esta actividad">
                        <i class="fa-solid fa-pen me-2"></i>Editar Actividad
                    </a>
                </div>
            </header>

            {# --- Tarjeta de Detalles --- #}
            <div class="card border-0 shadow-sm rounded-4 mb-5">

                {# Cabecera de Color Dinámico #}
                <div class="card-header border-0 rounded-top-4 p-4 text-white" style="background-color: {{ activity.color|default('#0d6efd') }};">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2">
                        <h2 class="h4 mb-0 fw-bold">
                            {% if activity.icon %} <i class="{{ activity.icon }} me-2"></i> {% endif %}
                            {{ activity.name }}
                        </h2>
                        {% if activity.category %}
                            <span class="badge bg-white bg-opacity-25 text-white border border-white rounded-pill px-3 py-2 shadow-sm">{{ activity.category }}</span>
                        {% endif %}
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <h3 class="h6 text-secondary text-uppercase fw-bold mb-4 small" style="letter-spacing: 1px;">Información de la Actividad</h3>

                    <dl class="row g-4 mb-5">
                        <dt class="col-sm-3 text-muted fw-semibold">Descripción</dt>
                        <dd class="col-sm-9 text-dark">
                            {% if activity.description %}
                                {{ activity.description|nl2br }}
                            {% else %}
                                <span class="fst-italic text-muted">Sin descripción detallada.</span>
                            {% endif %}
                        </dd>

                        <dt class="col-sm-3 text-muted fw-semibold">Configuración Visual</dt>
                        <dd class="col-sm-9 d-flex align-items-center gap-4 flex-wrap">
                            <div class="d-flex align-items-center gap-2">
                                <div class="rounded-circle shadow-sm border" style="width: 24px; height: 24px; background-color: {{ activity.color }};"></div>
                                <span class="small text-muted fw-semibold">{{ activity.color }}</span>
                            </div>
                            {% if activity.icon %}
                                <div class="d-flex align-items-center gap-2 border-start ps-4">
                                    <i class="{{ activity.icon }} text-secondary fs-5"></i>
                                    <code class="small text-muted bg-light px-2 py-1 rounded">{{ activity.icon }}</code>
                                </div>
                            {% endif %}
                        </dd>
                    </dl>

                    {# --- Placeholder para Estadísticas (Alerta UI Kit) --- #}
                    <div class="alert alert-info border-0 shadow-sm rounded-3 d-flex align-items-center mb-0" role="alert">
                        <i class="fa-solid fa-chart-bar fs-4 me-3"></i>
                        <div>
                            <strong class="d-block mb-1">Próximamente</strong>
                            <span class="small">Histórico de veces que has realizado esta actividad.</span>
                        </div>
                    </div>
                </div>
            </div>

            {# --- Zona de Peligro (Eliminar) --- #}
            <section class="mt-5 pt-4 border-top">
                <h2 class="h6 fw-bold text-danger mb-3"><i class="fa-solid fa-triangle-exclamation me-2"></i>Zona de Peligro</h2>
                <div class="card border-0 bg-danger bg-opacity-10 rounded-4">
                    <div class="card-body p-4 d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                        <div>
                            <h3 class="h6 fw-bold text-danger mb-1">Borrar esta actividad</h3>
                            <p class="text-danger small mb-0 opacity-75">Una vez eliminada, no podrás recuperar sus datos ni su histórico.</p>
                        </div>
                        <div style="min-width: 200px;">
                            {{ include('activity/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
{% endblock %}
