{# --- Formulario de Eliminación de Actividad --- #}
<form method="post" action="{{ path('app_activity_delete', {'id': activity.id}) }}" onsubmit="return confirm('¿Estás seguro de que deseas borrar esta actividad? Esta acción es irreversible y eliminará los registros diarios asociados.');" class="d-inline-block w-100">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activity.id) }}">
    <button class="btn btn-outline-danger rounded-pill px-4 w-100 shadow-sm" aria-label="Eliminar esta actividad">
        <i class="fa-solid fa-trash me-2"></i>Eliminar Actividad
    </button>
</form>
