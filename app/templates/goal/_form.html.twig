{{ form_start(form) }}

    <div class="row">
        {# Nombre del Objetivo #}
        <div class="col-12 mb-4">
            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ej: Leer antes de dormir...'}}) }}
            {{ form_errors(form.name) }}
        </div>

        {# Tipo de Objetivo (Radio Buttons) #}
        <div class="col-md-6 mb-4">
            <div class="card bg-light border-0 h-100">
                <div class="card-body">
                    <h6 class="card-title fw-bold mb-3"><i class="bi bi-collection"></i> Tipo de Objetivo</h6>
                    {# Renderizamos los radios con un loop para darles estilo o dejamos el widget por defecto #}
                    {{ form_widget(form.type) }}
                    <div class="form-text text-muted mt-2">
                        <small><strong>Racha:</strong> Hábito binario (Lo hice / No lo hice).<br>
                        <strong>Acumulativo:</strong> Sumar cantidades (pasos, páginas, litros).</small>
                    </div>
                    {{ form_errors(form.type) }}
                </div>
            </div>
        </div>

        {# Configuración Temporal #}
        <div class="col-md-6 mb-4">
            <div class="card bg-light border-0 h-100">
                <div class="card-body">
                    <h6 class="card-title fw-bold mb-3"><i class="bi bi-calendar-event"></i> Configuración</h6>

                    <div class="mb-3">
                        {{ form_label(form.period, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.period, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.period) }}
                    </div>

                    <div class="mb-0">
                        {{ form_label(form.targetValue, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.targetValue, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-text">Déjalo vacío si es solo mantener la racha.</div>
                        {{ form_errors(form.targetValue) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
        <a href="{{ path('app_goal_index') }}" class="btn btn-outline-secondary me-md-2">Cancelar</a>
        <button class="btn btn-primary px-4">{{ button_label|default('Guardar Objetivo') }}</button>
    </div>

{{ form_end(form) }}
