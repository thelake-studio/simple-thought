{% extends 'base.html.twig' %}

{% block title %}Editar Objetivo - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">

            {# --- Cabecera --- #}
            <header class="mb-4">
                <a href="{{ path('app_goal_index') }}" class="text-decoration-none text-secondary small mb-3 d-inline-block" aria-label="Volver a mis objetivos">
                    <i class="fa-solid fa-arrow-left me-2"></i>Volver al listado
                </a>
                <h1 class="h3 fw-bold text-primary mb-1">
                    <i class="fa-solid fa-pen-to-square me-2"></i>Editar Objetivo
                </h1>
                <p class="text-muted small mb-0">Modifica los parámetros de "{{ goal.name }}".</p>
            </header>

            {# --- Formulario Principal --- #}
            {% include 'goal/_form.html.twig' with {'button_label': 'Actualizar Cambios'} %}

            {# --- Zona de Peligro (Eliminar) --- #}
            <section class="mt-5 pt-4 border-top">
                <h2 class="h6 fw-bold text-danger mb-3"><i class="fa-solid fa-triangle-exclamation me-2"></i>Zona de Peligro</h2>
                <div class="card border-0 bg-danger bg-opacity-10 rounded-4">
                    <div class="card-body p-4 d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                        <div>
                            <h3 class="h6 fw-bold text-danger mb-1">Borrar este objetivo</h3>
                            <p class="text-danger small mb-0 opacity-75">Esta acción borrará el objetivo y <strong>todo su historial</strong> permanentemente.</p>
                        </div>
                        <div style="min-width: 200px;">
                            {{ include('goal/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
{% endblock %}
