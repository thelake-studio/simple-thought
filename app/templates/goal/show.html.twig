{% extends 'base.html.twig' %}

{% block title %}Progreso: {{ goal.name }} - Simple Thought{% endblock %}

{% block body %}
<div class="container-fluid py-4">

    {# --- Cabecera y Navegación --- #}
    <header class="mb-5 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
        <div>
            <a href="{{ path('app_goal_index') }}" class="text-decoration-none text-secondary small mb-3 d-inline-block" aria-label="Volver a mis objetivos">
                <i class="fa-solid fa-arrow-left me-2"></i>Volver al listado
            </a>
            <h1 class="h3 fw-bold text-primary mb-0">
                <i class="fa-solid fa-chart-pie me-2"></i>Progreso de Objetivo
            </h1>
        </div>
        <div class="d-flex flex-column flex-md-row gap-2 mt-3 mt-md-0">
            <a href="{{ path('app_goal_log_new', {'id': goal.id}) }}" class="btn btn-success rounded-pill px-4 shadow-sm w-100 w-md-auto text-nowrap" aria-label="Añadir registro manual">
                <i class="fa-solid fa-plus me-2"></i>Añadir Registro
            </a>
            <a href="{{ path('app_goal_edit', {'id': goal.id}) }}" class="btn btn-primary rounded-pill px-4 shadow-sm w-100 w-md-auto text-nowrap" aria-label="Editar este objetivo">
                <i class="fa-solid fa-pen me-2"></i>Editar Objetivo
            </a>
        </div>
    </header>

    <div class="row g-4">

        {# --- COLUMNA IZQUIERDA: RESUMEN / ESTADÍSTICAS --- #}
        <div class="col-md-5 col-lg-4">
            <article class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center p-4 p-md-5">
                    <h2 class="h4 fw-bold text-dark mb-4">{{ goal.name }}</h2>

                    <hr class="my-4 text-muted opacity-25">

                    {% if goal.type == constant('App\\Entity\\Goal::TYPE_SUM') %}
                        {# === VISTA PARA SUMATORIOS === #}
                        <div class="display-3 fw-bold text-primary mb-2">{{ stats.percentage }}%</div>
                        <p class="text-muted small fw-semibold mb-4 text-uppercase letter-spacing-1">
                            Completado {{ stats.period_label|default('en total') }}
                        </p>

                        <div class="progress mb-3 rounded-pill bg-light border shadow-sm" style="height: 16px;">
                            <div class="progress-bar rounded-pill {% if stats.percentage >= 100 %}bg-success{% else %}bg-primary{% endif %}" role="progressbar" style="width: {{ stats.percentage }}%"></div>
                        </div>
                        <div class="d-flex justify-content-between fw-bold text-secondary small px-2">
                            <span>Actual: {{ stats.current }}</span>
                            <span>Meta: {{ stats.target }}</span>
                        </div>

                    {% else %}
                        {# === VISTA PARA RACHAS === #}
                        {# CORRECCIÓN: Uso de fa-4x y contenedor con padding para que la llama no se corte por arriba #}
                        <div class="mb-4 py-2">
                            <i class="fa-solid fa-fire fa-4x {% if stats.current_streak > 0 %}text-warning{% else %}text-muted opacity-50{% endif %}"></i>
                        </div>
                        <div class="display-3 fw-bold text-dark">{{ stats.current_streak }}</div>
                        <p class="text-muted text-uppercase small fw-bold mb-4" style="letter-spacing: 1px;">Días de Racha</p>

                        {% if stats.is_completed_today %}
                            <div class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-4 py-2 shadow-sm fs-6">
                                <i class="fa-solid fa-circle-check me-2"></i> ¡Hoy has cumplido!
                            </div>
                        {% else %}
                            <div class="badge bg-light text-secondary border rounded-pill px-4 py-2 shadow-sm fs-6">
                                <i class="fa-regular fa-clock me-2"></i> Pendiente hoy
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </article>
        </div>

        {# --- COLUMNA DERECHA: HISTORIAL DE LOGS --- #}
        <div class="col-md-7 col-lg-8">
            <section class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-2">
                    <h3 class="h5 fw-bold text-dark mb-0"><i class="fa-solid fa-clock-rotate-left text-secondary me-2"></i> Historial de Progreso</h3>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0 border-top">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4 text-muted small text-uppercase fw-semibold border-bottom-0">Fecha</th>
                                    <th class="text-muted small text-uppercase fw-semibold border-bottom-0">Registro</th>
                                    <th class="text-end pe-4 text-muted small text-uppercase fw-semibold border-bottom-0">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for log in history %}
                                <tr>
                                    <td class="ps-4 py-3">
                                        <span class="fw-bold text-dark">{{ log.date|date('d/m/Y') }}</span>
                                        <small class="text-muted d-block">{{ log.date|date('l') }}</small>
                                    </td>
                                    <td class="py-3">
                                        {% if goal.type == constant('App\\Entity\\Goal::TYPE_SUM') %}
                                            <span class="badge bg-primary rounded-pill shadow-sm px-3 py-2">+ {{ log.value }}</span>
                                        {% else %}
                                            <span class="badge bg-success rounded-pill shadow-sm px-3 py-2">
                                                <i class="fa-solid fa-check me-1"></i> Hecho
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end pe-4 py-3">
                                        <div class="d-flex justify-content-end gap-2">
                                            {# Botón Editar #}
                                            <a href="{{ path('app_goal_log_edit', {'id': log.id}) }}" class="btn btn-sm btn-light text-secondary rounded-circle shadow-sm" aria-label="Editar registro del {{ log.date|date('d/m/Y') }}" title="Editar registro">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>

                                            {# Botón Borrar #}
                                            <form method="post" action="{{ path('app_goal_log_delete', {'id': log.id}) }}" onsubmit="return confirm('¿Borrar este registro? Afectará a tu progreso actual.');" class="d-inline-block">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ log.id) }}">
                                                <button class="btn btn-sm btn-light text-danger rounded-circle shadow-sm" aria-label="Eliminar registro del {{ log.date|date('d/m/Y') }}" title="Eliminar">
                                                    <i class="fa-solid fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center py-5">
                                        <i class="fa-solid fa-box-open text-secondary opacity-50 fa-3x mb-3 d-block"></i>
                                        <h4 class="h6 fw-bold text-dark">Historial vacío</h4>
                                        <p class="text-muted small mb-0">Aún no hay registros para este objetivo.</p>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>

    </div>
</div>
{% endblock %}
