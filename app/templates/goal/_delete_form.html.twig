{# --- Formulario de Eliminación de Objetivo --- #}
<form method="post" action="{{ path('app_goal_delete', {'id': goal.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres borrar este objetivo? Perderás todo tu progreso y rachas actuales.');" class="d-inline-block w-100">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ goal.id) }}">
    <button class="btn btn-outline-danger rounded-pill px-4 w-100 shadow-sm" aria-label="Eliminar este objetivo permanentemente">
        <i class="fa-solid fa-trash me-2"></i>Eliminar Objetivo
    </button>
</form>
